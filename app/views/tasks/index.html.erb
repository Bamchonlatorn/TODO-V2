<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks 🍂</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div class="task">
      <%= render task %>
      <p>
        <%= link_to "Show this task", task, class: 'link' %>
        <%= link_to 'Toggle Status', toggle_status_task_path(task), method: :get, class: 'toggle-button' %>
      </p>
    </div>
  <% end %>
</div>

<div class="button-container">
  <%= link_to "New task ✨", new_task_path, class: 'btn' %>
  <%= link_to "Complete Tab 🍁", complete_tasks_path, class: 'btn' %>
  <%= link_to "Incomplete Tab 🍂", incomplete_tasks_path, class: 'btn' %>
  <%= link_to "Back to categories 🏷️", categories_path, class: 'btn' %>
</div>
