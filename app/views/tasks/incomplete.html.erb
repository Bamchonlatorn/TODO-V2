<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Incomplete Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
      <%= link_to 'Toggle Status', toggle_status_task_path(task), method: :get, class: 'toggle-button' %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
<%= link_to "complete Tab", complete_tasks_path %>
<%= link_to "Back to categories", categories_path %>
