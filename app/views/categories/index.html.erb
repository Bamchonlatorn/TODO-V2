<p style="color: green"><%= notice %></p>

<% content_for :title, "Categories" %>

<section>
    <h1>Categories</h1>

    <div>
      <div>
        <% @categories.each do |category| %>
          <%= render category %>
          <p>
            <%= link_to "Show this category", category %>
          </p>
        <% end %>
      </div>

      <section>
        <div>
          <%= link_to "New category", new_category_path %>
        </div>

        <div> 
          <%= link_to "Back to tasks", tasks_path %>
        </div>
      </section>
    </div>
</section>
