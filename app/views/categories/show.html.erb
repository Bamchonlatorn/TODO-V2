<h1><%= @category.name %></h1>

<h2>Tasks in this Category:</h2>

<% if @category.tasks.any? %>
  <ul>
    <% @category.tasks.each do |task| %>
      <li>
        <strong>Name:</strong> <%= task.name %>,
        <strong>Status:</strong> <%= task.status %>
        <%= link_to 'Toggle Status', toggle_status_task_path(@task), method: :get, class: 'toggle-button' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No tasks in this category.</p>
<% end %>

<%= link_to 'Edit Category', edit_category_path(@category) %> |
<%= link_to 'Back to Categories', categories_path %>

